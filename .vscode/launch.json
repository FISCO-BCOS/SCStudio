{
	"version": "0.2.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/src/**/*.js"
            ],        
            "preLaunchTask": "npm: watch",
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Server",
            "port": 6009,
            "restart": true,
            "outFiles": [                "${workspaceRoot}/out/src/**/*.js"
            ]
        }
    ]
}
